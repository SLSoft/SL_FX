@model SL_FX.ViewModels.VM_ChangePassword
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    
    <div id="sup">
        <div class="wrap">
            <h1>
                <a href="#">我的站点</a>&gt;<a href="#">修改密码</a></h1>
            <div class="drop">
                <div class="drop_tit">
                    @Html.LabelFor(model => model.OldPassword)：</div>
                <div class="selectBox">
                    @Html.EditorFor(model => model.OldPassword)
                  
                </div>  @Html.ValidationMessageFor(model => model.OldPassword)<span style="color: #999; font-size: 10px;">(字母开头，长度6~18位)</span>
            </div>
            <div class="clear">
            </div>
            <div class="drop">
                <div class="drop_tit">
                    @Html.LabelFor(model => model.Password)：</div>
                <div class="selectBox">
                    @Html.EditorFor(model => model.Password)
                   
                </div> @Html.ValidationMessageFor(model => model.Password)<span style="color: #999; font-size: 10px;">(字母开头，长度6~18位)</span>
            </div>
            <div class="clear">
            </div>
            <div class="drop">
                <div class="drop_tit">
                    @Html.LabelFor(model => model.ConfirmPassword)：</div>
                <div class="selectBox">
                    @Html.EditorFor(model => model.ConfirmPassword)
                   
                </div> @Html.ValidationMessageFor(model => model.ConfirmPassword)<span style="color: #999;
                        font-size: 10px;">(字母开头，长度6~18位)</span>
            </div>
            <div class="clear">
            </div>
            <div class="step">
                <input type="submit" value="修改密码" class="pre_btn" />
                <input type="button" value="返回" class="pre_btn" onclick="location='Edit'" />
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
}

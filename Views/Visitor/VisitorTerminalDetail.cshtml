    ViewBag.Title = "访客终端设详细情况分析";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    var sum_url = "http://60.191.205.94/read?sId=" + website_id + "&startDate=";
    var pcdevicetype_url = "http://60.191.205.94/PCDeviceType?sId=" + website_id + "&startDate=";

    $(function () {
        $("#selitem").html($('input[type="radio"][name="rad"]:checked').next("label").text());
        $("#f_date").val($("#startdate").val());
        $("#trigger").powerFloat({
            target: $("#targetBox"),
            width: "150px"
        });

        $("#seltag").click(function () {
            getJosnDataByAPI(pcdevicetype_url + $("#startdate").val() + "&endDate=" + $("#enddate").val(), "pcdevicetypecallback");
            $("#selitem").html($('input[type="radio"][name="rad"]:checked').next("label").text());
        });

        getJosnDataByAPI(sum_url + $("#startdate").val() + "&endDate=" + $("#enddate").val(), "sumcallback");
        getJosnDataByAPI(pcdevicetype_url + $("#startdate").val() + "&endDate=" + $("#enddate").val(), "pcdevicetypecallback");
    });

    function sumcallback(data) {
        createSumTable(data[0]);
    }

    function pcdevicetypecallback(data) {
        createShowingTable(data);
        createpiecharts(getpiedata(data, $('input[type="radio"][name="rad"]:checked').val()));
    }

    function createSumTable(data) {
        //获取后台传过来的jsonData,并进行解析 
        //var dataArray = $.parseJSON(data.jsonData);
        //此处需要让其动态的生成一个table并填充数据
        var dataArray = data;
        var tableStr = "";
        tableStr = tableStr + "<tr><th>浏览次数(PV)</th><th>独立访客(UV)</th><th>IP</th><th>新独立访客</th><th>访问次数</th><th>人均浏览页数</th><th>平均访问深度</th><th>平均访问时长</th><th>跳出率</th></tr>";

        tableStr = tableStr + "<tr><td>" + dataArray.PV + "</td><td>" + dataArray.UV + "</td><td>" + dataArray.IP + "</td><td>" + dataArray.NewUV + "</td><td>" + dataArray.Session + "</td><td>" + dataArray.ThePerCapitaBrowsingPages + "</td><td>" + dataArray.AvgDepthCount + "</td><td>" + dataArray.AvgTimeSpent + "秒</td><td>" + dataArray.AvgOut + "%</td></tr>";

        tableStr = tableStr + "";
        //将动态生成的table添加的事先隐藏的div中. 
        $("#sumdata").html(tableStr);
    }

    function createShowingTable(data) {
        //获取后台传过来的jsonData,并进行解析 
        //var dataArray = $.parseJSON(data.jsonData);
        //此处需要让其动态的生成一个table并填充数据
        var dataArray = data;
        var tableStr = "";
        tableStr = tableStr + "<thead><tr id='dataTheadTr'><th>终端类型</th><th>浏览次数(PV)</th><th>独立访客(UV)</th><th>IP</th><th>新独立访客</th><th>访问次数</th><th>平均访问深度</th></tr></thead>";
        var len = dataArray.length;
        for (var i = 0; i < len; i++) {
            tableStr = tableStr + "<tr><td>" + dataArray[i].dname + "</td><td>" + dataArray[i].pvnum + "</td><td>" + dataArray[i].uvnum + "</td><td>" + dataArray[i].ipnum + "</td><td>" + dataArray[i].newuvnum + "</td><td>" + dataArray[i].vnum + "</td><td>" + dataArray[i].avgdepth + "</td</tr>";
        }
        tableStr = tableStr + "";
        //将动态生成的table添加的事先隐藏的div中. 
        $("#dataTable").html(tableStr);
    }

    function createpiecharts(data) {
        $('#piechart').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: ''
            },
            tooltip: {
                pointFormat: '{series.URL}: <b>{point.y}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                    }
                }
            },
            series: [{
                type: 'pie',
                name: $('input[type="radio"][name="rad"]:checked').next("label").text(),
                data: data
            }]
        });
    }

    function getpiedata(data, type) {
        var piedata = [];
        $.each(data, function (i, items) {
            var temp = [];
            temp.push(items.dname);
            temp.push(parseFloat(getshowitem(items, type)));
            if (getshowitem(items, type) > 0) {
                piedata.push(temp);
            }
        });
        return piedata;
    }

    function getshowitem(data, type) {
        var item = data;
        switch (type) {
            case "pv":
                return typeof (item.pvnum) == 'undefined' || item.pvnum == '' ? 0 : item.pvnum;
                break;
            case "uv":
                return typeof (item.uvnum) == 'undefined' ? 0 : item.uvnum;
                break;
            case "ip":
                return typeof (item.ipnum) == 'undefined' ? 0 : item.ipnum;
                break;
            case "newuv":
                return typeof (item.newuvnum) == 'undefined' ? 0 : item.newuvnum;
                break;
            case "vnum":
                return typeof (item.vnum) == 'undefined' ? 0 : item.vnum;
                break;
            default:
                return typeof (item.pvnum) == 'undefined' ? 0 : item.pvnum;
                break;
        }
    }

    function showAll(id) {
        getJosnDataByAPI(sum_url + $("#startdate").val() + "&endDate=" + $("#enddate").val(), "sumcallback");
        getJosnDataByAPI(pcdevicetype_url + $("#startdate").val() + "&endDate=" + $("#enddate").val(), "pcdevicetypecallback");
        var ctime = $("#startdate").val() == $("#enddate").val() ? $("#startdate").val() : $("#startdate").val() + "至" + $("#enddate").val()
        $("#ctime").html(ctime);
    }
</script>



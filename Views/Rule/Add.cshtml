@model SL_FX.ViewModels.VM_SignUp
@{
    ViewBag.Title = "Add";
    Layout = null;
}
@helper GenerateSiteList()
{
    var i = 0;
    foreach (var item in ViewData["SiteList"] as SelectList)
    {
        if (i % 3 == 0 && i != 0)
        {
            @:</tr><tr>
        }
        @:<td><input type="checkbox"  name="SiteList" value="@item.Value" /><span>@item.Text</span></td>
        i++;
    }
}
<h2>新增管理用户</h2>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)<span style="color: #999;
                font-size: 10px;">(登录系统的账户名，默认密码为111111)</span>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NickName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NickName)
            @Html.ValidationMessageFor(model => model.NickName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CorpName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CorpName)
            @Html.ValidationMessageFor(model => model.CorpName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Mphone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Mphone)
            @Html.ValidationMessageFor(model => model.Mphone)
        </div>
        <div class="editor-label">
            授权站点
        </div>
        <div class="editor-field">
            <table>@GenerateSiteList()</table>
        </div>
        <p>
            <input type="submit" value="确定" />
        </p>
}
